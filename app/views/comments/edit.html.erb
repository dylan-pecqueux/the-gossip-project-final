<html>
  <body>

    <div class="jumbotron jumbotron-fluid" id="jumbotron-edit">
      <div class="container-fluid blockquote text-center">
        <% if @gossip.errors.any? %>
          <div class="alert alert-warning text-center" role="alert">
            <p>Nous n'avons pas réussi à modifier le potin pour la (ou les) raison(s) suivante(s) :</p>
            <ul>
              <% @gossip.errors.full_messages.each do |message| %>
                <%= message %><br />
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="container d-flex justify-content-around text-center">
        <h2 class="list-group-item active" style="width: 25rem;">Edite ton gossip :</h2>
        </div>
        
        <div class="container text-white" id="transparent"  style="max-width: 25rem;">
          <div class="container d-flex justify-content-center text-center" style="max-width: 30rem" id="transparent-form">
            <%= form_for([@gossip, @comment]) do |f| %>
            
            <label class="mt-3">Contenu :</label><br />
            <%= f.text_area :content %>
            <br /> <br />
            <button type="submit" class="btn btn-primary mb-3">Editer</button>
            <a class="btn btn-warning mb-3" href="<%=gossip_comment_path(@gossip, @comment)%>" data-confirm="êtes vous sur de vouloir supprimer ce gossip ?" data-method="DELETE">Supprimer</a>
      
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>